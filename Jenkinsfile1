pipeline {
    agent any

    environment {
        ZIPNAME = "$(date +'%d/%m/%Y')"
    }

    stages {
        stage('Cleanup') {
            steps {
                sh 'rm -rf .git'
            }
        }
        stage('Zip') {
            steps {
                sh 'zip -r "${ZIPNAME}"".zip ./'
            }
        }
        stage('Artifact') {
            steps {
                archiveArtifacts artifacts: 'zipped.zip', onlyIfSuccessful: true
            }
        }
    }
}
