pipeline {
    agent dockerfile true

    environment {
        ZIPNAME = "build ${BUILD_NUMBER}"
    }

    stages {
        stage('Build') {
            steps {
                sh 'echo building'
            }
        }
        stage('Scan') {
            steps {
                sh 'echo scanning'
            }
        }
        stage('Artifact') {
            steps {
                sh 'echo artifacting'
            }
        }
    }
}
