pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t testimage .'
            }
        }
        stage('Scan') {
            steps {
                sh 'snyk container test --json-file-output=scan_results.json testimage || true'
            }
        }
        stage('HTML Output') {
            steps {
                sh 'snyk-to-html -i scan_results.json -o scan_results.html -a'
            }
        }
        stage('Artifact') {
            steps {
                archiveArtifacts artifacts: "scan_results.json", "scan_result.html", onlyIfSuccessful: true
            }
        }
    }
}
