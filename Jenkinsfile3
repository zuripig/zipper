pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t testimage .'
            }
        }
        stage('Scan') {
            steps {
                sh 'snyk container test --json-file-output=scan_result.json testimage || true'
            }
        }
        stage('Artifact') {
            steps {
                archiveArtifacts artifacts: "*.json", onlyIfSuccessful: true
            }
        }
        stage('HTML Output') {
            steps {
                sh 'snyk-to-html -i scan_results.json -o scan_results.html'
            }
        }
    }
}
