pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t testimage .'
            }
        }
        stage('save image') {
            steps {
                sh 'docker save -o /Users/thomasmccallum/.jenkins/workspace/docker_main/testimage.tar testimage'
            }
        }
        stage('Scan') {
            steps {
                sh 'snyk container test --sarif-file-output=scan_result.sarif --severity-threshold=critical docker-archive:testimage.tar'
            }
        }
        stage('Artifact') {
            steps {
                archiveArtifacts artifacts: "*.json", onlyIfSuccessful: true
            }
        }
    }
}
