pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t testimage .'
            }
        }
        stage('save image') {
            steps {
                sh 'docker save -o /Users/thomasmccallum/.jenkins/workspace/docker_main/testimage1.tar testimage'
            }
        }
        stage('Scan') {
            steps {
                snykSecurity failOnError: false, failOnIssues: false, snykInstallation: 'mySnyk', snykTokenId: 'snykkey'
            }
        }
        stage('Artifact') {
            steps {
                archiveArtifacts artifacts: "*.json", onlyIfSuccessful: true
            }
        }
    }
}
