pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t testimage .'
            }
        }
        stage('Scan') {
            steps {
                failOnError: false, failOnIssues: false
                sh 'docker scan testimage'
            }
        }
        stage('Artifact') {
            steps {
                sh 'echo artifacting'
            }
        }
    }
}
