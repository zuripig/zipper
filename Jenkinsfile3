pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t testimage .'
            }
        }
        stage('Scan') {
            steps {
                snykSecurity failOnError: false, failOnIssues: false, snykInstallation: 'Please define a Snyk installation in the Jenkins Global Tool Configuration. This task will not run without a Snyk installation.', snykTokenId: 'snykkey'
            }
        }
        stage('Artifact') {
            steps {
                sh 'echo artifacting'
            }
        }
    }
}
